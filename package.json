{
  "name": "cerebral-boilerplate",
  "description": "Simple boilerplate for Cerebral",
  "author": "Jaroslaw Zabiello",
  "version": "5.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hipertracker/cerebral-boilerplate"
  },
  "main": "main.js",
  "scripts": {
    "test": "karma start",
    "check-coverage": "istanbul check-coverage --statements 23 --branches 5 --functions 9 --lines 24",
    "watch:test": "npm test -- --auto-watch --no-single-run",
    "validate": "npm-run-all --parallel validate-webpack:* lint test --serial check-coverage",
    "validate-webpack:dev": "webpack-validator webpack.config.js --env.dev",
    "validate-webpack:prod": "webpack-validator webpack.config.js --env.prod",
    "clean-dist": "rimraf dist",
    "copy-files": "cpy app/index.html app/favicon.ico dist",
    "clean-and-copy": "npm run clean-dist && npm run copy-files",
    "prestart": "npm run clean-and-copy",
    "start": "webpack-dev-server --env.dev --content-base dist",
    "prebuild": "npm run clean-and-copy",
    "prebuild:prod": "npm run clean-and-copy",
    "build": "webpack --env.dev",
    "build:prod": "webpack --env.prod -p",
    "lint": "eslint .",
    "setup": "npm install && npm run validate"
  },
  "dependencies": {
    "cerebral": "^1.0.1",
    "cerebral-model-immutable": "^0.1.4",
    "cerebral-module-devtools": "^0.7.2",
    "cerebral-module-http": "^0.5.0",
    "cerebral-module-recorder": "^0.6.1",
    "cerebral-module-router": "^0.17.1",
    "cerebral-module-useragent": "^0.10.20",
    "cerebral-provider-modules": "^0.1.2",
    "cerebral-view-react": "^0.12.12",
    "classnames": "^2.2.5",
    "jquery": "^3.1.0",
    "lodash": "^4.15.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-router": "^2.7.0",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-airbnb": "^2.0.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "cerebral-testable": "^1.1.0",
    "chai": "^3.5.0",
    "cpy-cli": "^1.0.1",
    "css-loader": "^0.24.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.4.0",
    "eslint-config-kentcdodds": "^10.1.0",
    "eslint-import-resolver-webpack": "^0.5.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "ghooks": "^1.3.2",
    "html-webpack-plugin": "^2.22.0",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.5",
    "karma": "^1.2.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-webpack": "^1.8.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "load-json": "0.0.1",
    "mocha": "^3.0.2",
    "npm-run-all": "^3.1.0",
    "opt-cli": "^1.5.1",
    "postcss-loader": "^0.11.1",
    "react-addons-test-utils": "^15.3.1",
    "resolve-url-loader": "^1.6.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.20",
    "webpack-dev-server": "^2.1.0-beta.0",
    "webpack-validator": "^2.2.7"
  },
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec \"npm run validate\""
    }
  }
}
